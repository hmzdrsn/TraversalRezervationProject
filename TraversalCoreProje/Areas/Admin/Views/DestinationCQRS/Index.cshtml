@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CQRS Rota Verileri</h1>

<table class="table table-bordered"> 
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Gün-Gece</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.city</td>
            <td>@item.daynight</td>
            <td>@item.price</td>
            <td>@item.capacity</td>
            <th><a href="/Admin/DestinationCQRS/DeleteDestination/@item.id" class="btn btn-outline-danger">Sil</a> </th>
            <th><a href="/Admin/DestinationCQRS/GetDestination/@item.id" class="btn btn-outline-primary">Güncelle</a> </th>
        </tr>
    }
</table>
<a href="/Admin/DestinationCQRS/CreateDestination/" class="btn btn-outline-success">CQRS Yeni Tur Ekle</a>



