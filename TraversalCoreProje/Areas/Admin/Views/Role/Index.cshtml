@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Rol Listesi</h1>
 @if (Model.Count > 0)
    {
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th>Rolü Sil</th>
        <th>Rolü Güncelle</th>
    </tr>
   
        @foreach (var item in Model)
        {
            count++;
                <tr>
            <td>@count</td>
                    <td>@item.Name</td>
                <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn-outline-danger">Rolü Sil</a></td>
                <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn-outline-success">Rolü Güncelle</a></td>
                </tr>
        }
</table>
    }
    else
    {
        <div>
        <span class="alert alert-danger">Herhangi Bir Rol Bulunamadı</span>
        </div>
    }
    </br>
<a href="/Admin/Role/CreateRole" class="btn btn-outline-primary">Yeni Rol Ekle</a>